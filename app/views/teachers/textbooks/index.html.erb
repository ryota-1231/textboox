<p id="notice"><%= notice %></p>

<h1>Teachers Textbooks</h1>
  <div class='item-contents'>
    <h2 class='title'>テキスト一覧</h2>
    <%= link_to '新規テキスト', "#", class: "subtitle" %>
    <ul class='item-lists'>
      <% @teachers_textbooks.each do |teachers_textbook| %>
      <li class='list'>
        <%= link_to [:teachers, teachers_textbook] do %>
        <div class='item-img-content'>
          <%= image_tag teachers_textbook.image, class: "item-img" %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= teachers_textbook.name %>
          </h3>
          <div class='item-price'>
            <span><%= teachers_textbook.page %>ページ</span>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers_textbooks.each do |teachers_textbook| %>
      <tr>
        <td><%= teachers_textbook.name %>
        <td><%= link_to 'Show', [:teachers, teachers_textbook] %></td>
        <td><%= link_to 'Edit', edit_teachers_textbook_path(teachers_textbook) %></td>
        <td><%= link_to 'Destroy', [:teachers,teachers_textbook], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Textbook', new_teachers_textbook_path %>
