<div class="contents row">
  <div class = 'item-contents'>
    <h2 class = 'title'><%= @name %>さんの学習中テキスト</h2>
    <ul class= 'item-lists'>
    <% @my_textbooks.each do |my_textbook| %>
      <li class='list'>
        <%= link_to [:students, my_textbook.textbook] do %>
          <div class='item-img-content'>
            <%= image_tag my_textbook.textbook.image, class: "item-img" %>
          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= my_textbook.textbook.name %>
            </h3>
            <div class='item-price'>
              <span><%= my_textbook.textbook.page %>ページ</span>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </div>
</div>